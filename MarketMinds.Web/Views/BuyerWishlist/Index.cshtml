@model WebMarketplace.Models.BuyerWishlistViewModel

@{
    ViewData["Title"] = "My Wishlist";
}

<div class="container mx-auto my-8 px-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

    @if (Model.WishlistItems == null || !Model.WishlistItems.Any())
    {
        <div class="text-center py-12">
            <p class="text-xl text-gray-600 mb-2">Your wishlist is empty.</p>
            <p class="text-gray-500">Start adding products you love!</p>
            <a asp-controller="Home" asp-action="Index"
                class="mt-6 inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors">
                Browse Products
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            @foreach (var item in Model.WishlistItems)
            {
                <partial name="_WishlistItem" model="item" />
            }
        </div>
    }
</div>
