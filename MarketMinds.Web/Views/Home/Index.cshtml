@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-4xl font-bold mb-4">Welcome to MarketMinds</h1>
    <p class="text-xl mb-6">Your ultimate marketplace for buying, selling, borrowing, and auctioning products.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto mt-12">
        <a href="@Url.Action("Index", "AuctionProducts")" class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1">
            <div class="text-blue-600 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
            </div>
            <h2 class="text-xl font-bold mb-2">Auction Products</h2>
            <p class="text-gray-600">Browse and bid on available auction items.</p>
        </a>
        
        <a href="@Url.Action("Index", "BuyProducts")" class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1">
            <div class="text-green-600 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
            </div>
            <h2 class="text-xl font-bold mb-2">Buy Products</h2>
            <p class="text-gray-600">Purchase items directly at fixed prices.</p>
        </a>
        
        <a href="@Url.Action("Index", "BorrowProducts")" class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1">
            <div class="text-purple-600 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
            </div>
            <h2 class="text-xl font-bold mb-2">Borrow Products</h2>
            <p class="text-gray-600">Borrow items for a period of time.</p>
        </a>
    </div>

    <div class="mt-12">
        <a href="@Url.Action("Create", "Home")" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg">
            Create New Product
        </a>
    </div>
</div> 