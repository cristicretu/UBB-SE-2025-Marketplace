@model WebMarketplace.Models.Components.LabeledTextFieldModel

<div class="mb-4">
    <label for="@Model.Id" class="block text-sm font-medium text-gray-700 mb-1">@Model.Label</label>
    <input type="@Model.InputType" 
           id="@Model.Id" 
           name="@Model.Name" 
           value="@Model.Value" 
           placeholder="@Model.Placeholder"
           class="w-full px-3 py-2 border @(string.IsNullOrEmpty(Model.ErrorMessage) ? "border-gray-300" : "border-red-500") rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 @(Model.IsReadOnly ? "bg-gray-100" : "")"
           @(Model.IsReadOnly ? "readonly" : "")>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="mt-1 text-sm text-red-600">@Model.ErrorMessage</p>
    }
</div> 