@using MarketMinds.Shared.Services
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketMinds</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#3B82F6',
                            dark: '#2563EB',
                            light: '#60A5FA'
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50">
    @{
        bool isAuthenticated = User.Identity?.IsAuthenticated == true && UserSession.CurrentUserId.HasValue;
        string username = isAuthenticated ? (User.Identity.Name ?? "User") : null;

        var sessionRole = UserSession.CurrentUserRole ?? "null";

        int userType = 0;
        if (isAuthenticated && !string.IsNullOrEmpty(UserSession.CurrentUserRole))
        {
            if (int.TryParse(UserSession.CurrentUserRole, out int parsedType))
            {
                userType = parsedType;
            }
            else
            {
                switch (UserSession.CurrentUserRole)
                {
                    case "Admin": userType = 1; break;
                    case "Buyer": userType = 2; break;
                    case "Seller": userType = 3; break;
                    default: userType = 0; break;
                }
            }
        }

        bool isAdmin = isAuthenticated && userType == 1;
        bool isBuyer = isAuthenticated && userType == 2;
        bool isSeller = isAuthenticated && userType == 3;
    }
    <header>
        <nav class="bg-primary text-white py-4">
            <div class="container mx-auto px-4 flex justify-between items-center">
                <a class="font-bold text-2xl" asp-area="" asp-controller="Home" asp-action="Index">MarketMinds</a>
                <div>
                    <ul class="flex space-x-6 items-center">
                        @if (isAuthenticated)
                        {
                            @if (isBuyer || isAdmin)
                            {
                                <li>
                                    <a class="hover:text-primary-light transition" asp-area="" asp-controller="ChatBot"
                                        asp-action="Index"><i class="far fa-comments"></i> Chat</a>
                                </li>
                                <li>
                                    <a class="hover:text-primary-light transition cursor-pointer">
                                        <i class="far fa-bell"></i>
                                    </a>
                                </li>
                            }

                            <li class="relative dropdown-container">
                                <a class="hover:text-primary-light transition flex items-center cursor-pointer"
                                    id="userDropdown">
                                    <span>@username</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 9l-7 7-7-7" />
                                    </svg>
                                </a>
                                <div id="userDropdownContent"
                                    class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 hidden z-10">
                                    @if (isBuyer)
                                    {
                                        <a asp-controller="BuyerProfile" asp-action="Index" 
                                            class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Account</a>
                                    }
                                    else if (isSeller)
                                    {
                                        <a asp-controller="SellerProfile" asp-action="Index" 
                                            class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Account</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Index" 
                                            class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Account</a>
                                    }
                                    <a asp-controller="Order" asp-action="OrderHistory" 

                                        class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Orders</a>
                                    @if (isBuyer)
                                    {
                                        <a href="http://localhost:3000/Reviews/ReviewsGiven"
                                            class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Reviews</a>
                                    }
                                    else if (isSeller)
                                    {
                                        <a href="http://localhost:3000/Reviews/ReviewsReceived"
                                            class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Reviews</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Review" asp-action="MyReviews"
                                            class="block px-4 py-2 text-gray-800 hover:bg-gray-100">My Reviews</a>
                                    }
                                    <div class="border-t border-gray-100"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                            class="block w-full text-left px-4 py-2 text-gray-800 hover:bg-gray-100">Logout</button>
                                    </form>
                                </div>
                            </li>

                            @if (isSeller || isAdmin)
                            {
                                @if (isAdmin)
                                {
                                    <li>
                                        <a class="hover:text-primary-light transition" asp-controller="Admin"
                                            asp-action="Index">Admin</a>
                                    </li>
                                }
                                <li>
                                    <a class="hover:text-primary-light transition" asp-area="" asp-controller="Home"
                                        asp-action="Create">Create</a>
                                </li>
                            }

                            @if (isBuyer || isAdmin)
                            {
                                <li>
                                    <a href="@Url.Action("Index", "BuyerWishlist")"
                                        class="hover:text-primary-light transition cursor-pointer">
                                        <i class="far fa-heart"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="hover:text-primary-light transition" asp-area="" asp-controller="ShoppingCart"
                                        asp-action="Index">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li>
                                <a class="hover:text-primary-light transition" asp-controller="Account"
                                    asp-action="Login">Login</a>
                            </li>
                            <li>
                                <a class="hover:text-primary-light transition bg-white text-primary px-4 py-2 rounded-md hover:bg-gray-100"
                                    asp-controller="Account" asp-action="Register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto my-4 px-4">
        <main role="main">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p>@TempData["ErrorMessage"]</p>
                </div>
            }

            @if (TempData["WarningMessage"] != null)
            {
                <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
                    <p>@TempData["WarningMessage"]</p>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-100 py-4 mt-8 border-t">
        <div class="container mx-auto px-4">
            <div class="text-center text-gray-600">
                &copy; @DateTime.Now.Year - MarketMinds - <a class="text-primary hover:text-primary-dark" asp-area=""
                    asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const userDropdown = document.getElementById('userDropdown');
            const dropdownContent = document.getElementById('userDropdownContent');

            if (userDropdown && dropdownContent) {
                // Toggle dropdown when clicking on the dropdown button
                userDropdown.addEventListener('click', function (e) {
                    e.preventDefault();
                    dropdownContent.classList.toggle('hidden');
                });

                // Close dropdown when clicking outside, but allow links to work normally
                document.addEventListener('click', function (e) {
                    // If clicking on a link inside the dropdown, let it work normally
                    if (e.target.tagName === 'A' && dropdownContent.contains(e.target)) {
                        dropdownContent.classList.add('hidden');
                        return; // Don't prevent default for links
                    }
                    
                    if (!userDropdown.contains(e.target) && !dropdownContent.contains(e.target)) {
                        dropdownContent.classList.add('hidden');
                    }
                });

                // Ensure links in dropdown work properly
                const dropdownLinks = dropdownContent.querySelectorAll('a');
                dropdownLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        // Remove any target="_blank" if it exists
                        this.removeAttribute('target');
                        // Ensure it navigates in the same window
                        e.stopPropagation();
                        dropdownContent.classList.add('hidden');
                    });
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>