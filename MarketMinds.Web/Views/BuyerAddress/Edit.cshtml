@model WebMarketplace.Models.BuyerAddressViewModel

@{
    ViewData["Title"] = "Edit Buyer Address";
}

<h1 class="text-2xl font-bold mb-4">Edit Buyer Address</h1>

<form asp-action="Edit" class="space-y-4">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="StreetLine" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="StreetLine" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="StreetLine" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="City" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="City" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="City" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Country" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Country" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="Country" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="PostalCode" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="PostalCode" class="text-red-500 text-sm"></span>
    </div>
    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>
</form>
