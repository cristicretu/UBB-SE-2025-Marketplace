@model IEnumerable<WebMarketplace.Models.BuyerAddressViewModel>

@{
    ViewData["Title"] = "Buyer Addresses";
}

<h1 class="text-2xl font-bold mb-4">Buyer Addresses</h1>

<p>
    <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create New</a>
</p>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.StreetLine)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.City)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Country)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model => model.PostalCode)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.StreetLine)</td>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.City)</td>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Country)</td>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.PostalCode)</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
