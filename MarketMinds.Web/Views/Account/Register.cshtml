@model WebMarketplace.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-center">Create Account</h1>
    
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            
            <div class="mb-4">
                <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                <span asp-validation-for="Username" class="text-red-500 text-xs"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Email" type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Telephone" class="block text-gray-700 text-sm font-bold mb-2">Phone Number</label>
                <input asp-for="Telephone" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                <span asp-validation-for="Telephone" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="block text-gray-700 text-sm font-bold mb-2">Account Type</label>
                <select asp-for="Role" asp-items="ViewBag.Roles" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                    <option value="">Select Role</option>
                </select>
                <span asp-validation-for="Role" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Password" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
            </div>
            
            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
            </div>
            
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Register
                </button>
                <a asp-action="Login" class="inline-block align-baseline font-bold text-sm text-primary hover:text-primary-dark">
                    Already have an account?
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 