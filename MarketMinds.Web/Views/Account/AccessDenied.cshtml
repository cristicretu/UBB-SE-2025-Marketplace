@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center py-12">
    <div class="bg-red-100 border border-red-400 rounded-lg max-w-2xl mx-auto p-8">
        <h1 class="text-3xl font-bold text-red-600 mb-4">Access Denied</h1>
        <p class="text-gray-700 mb-6">You do not have permission to access this resource.</p>
        <div class="flex justify-center">
            <a asp-controller="Home" asp-action="Index" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded mr-4">
                Go to Home
            </a>
            <a asp-controller="Account" asp-action="Login" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                Login
            </a>
        </div>
    </div>
</div> 