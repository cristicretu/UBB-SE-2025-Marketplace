@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>
    
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            
            <div class="mb-4">
                <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
                <input type="text" name="username" id="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            
            <div class="mb-6">
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input type="password" name="password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Login
                </button>
                <a asp-action="Register" class="inline-block align-baseline font-bold text-sm text-primary hover:text-primary-dark">
                    Create Account
                </a>
            </div>
        </form>
    </div>
</div> 