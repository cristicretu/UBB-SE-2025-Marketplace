@model WebMarketplace.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>
    
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>
            
            <div class="mb-6">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required type="password">
                <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-6">
                <label for="CaptchaInput" class="block text-gray-700 text-sm font-bold mb-2">Captcha</label>
                <div class="flex items-center mb-2">
                    <div class="bg-gray-100 px-4 py-2 rounded mr-2 font-mono text-lg select-none">
                        @ViewData["CaptchaCode"]
                    </div>
                    <input asp-for="CaptchaInput" class="shadow appearance-none border rounded flex-1 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required placeholder="Enter captcha">
                </div>
                <span asp-validation-for="CaptchaInput" class="text-red-500 text-xs"></span>
            </div>
            
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Login
                </button>
                <a asp-action="Register" class="inline-block align-baseline font-bold text-sm text-primary hover:text-primary-dark">
                    Create Account
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 