@model WebMarketplace.Models.BuyerBadgeViewModel

@{
    ViewData["Title"] = "Buyer Badge Details";
}

<h1 class="text-2xl font-bold mb-4">Buyer Badge Details</h1>

<div class="mt-4">
    <dl class="grid grid-cols-2 gap-4">
        <dt class="font-medium text-gray-700">Badge Name</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.BadgeName)</dd>
        <dt class="font-medium text-gray-700">Discount</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Discount)</dd>
        <dt class="font-medium text-gray-700">Progress</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Progress)</dd>
        <dt class="font-medium text-gray-700">Image Source</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.ImageSource)</dd>
    </dl>
</div>
<div class="mt-6">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Edit</a>
    <a asp-action="Index" class="ml-4 inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Back to List</a>
</div>
