@model IEnumerable<WebMarketplace.Models.BuyerBadgeViewModel>

@{
    ViewData["Title"] = "Buyer Badges";
}

<h1 class="text-2xl font-bold mb-4">Buyer Badges</h1>

<p>
    <a asp-action="Create" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create New</a>
</p>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Badge Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Discount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Progress</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image Source</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.BadgeName)</td>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Discount)</td>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Progress)</td>
                <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.ImageSource)</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
