@model WebMarketplace.Models.BuyerBadgeViewModel

@{
    ViewData["Title"] = "Create Buyer Badge";
}

<h1 class="text-2xl font-bold mb-4">Create Buyer Badge</h1>

<form asp-action="Create" class="space-y-4">
    <div>
        <label asp-for="BadgeName" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="BadgeName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="BadgeName" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Discount" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Discount" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="Discount" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Progress" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Progress" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="Progress" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="ImageSource" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="ImageSource" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
        <span asp-validation-for="ImageSource" class="text-red-500 text-sm"></span>
    </div>
    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>
</form>
