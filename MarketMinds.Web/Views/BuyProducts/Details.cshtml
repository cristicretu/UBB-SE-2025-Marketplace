@model MarketMinds.Shared.Models.BuyProduct
@using MarketMinds.Shared.Services

@{
    ViewData["Title"] = $"Product Details: {Model.Title}";
    
    // Add user role check similar to _Layout.cshtml
    bool isAuthenticated = User.Identity?.IsAuthenticated == true && UserSession.CurrentUserId.HasValue;
    
    int userType = 0;
    if (isAuthenticated && !string.IsNullOrEmpty(UserSession.CurrentUserRole))
    {
        if (int.TryParse(UserSession.CurrentUserRole, out int parsedType))
        {
            userType = parsedType;
        }
        else
        {
            switch (UserSession.CurrentUserRole)
            {
                case "Admin": userType = 1; break;
                case "Buyer": userType = 2; break;
                case "Seller": userType = 3; break;
                default: userType = 0; break;
            }
        }
    }
    
    bool isAdmin = isAuthenticated && userType == 1;
    bool isBuyer = isAuthenticated && userType == 2;
    bool isSeller = isAuthenticated && userType == 3;
    
    // Check if user can make purchases (admins and buyers)
    bool canPurchase = isAdmin || isBuyer;
}

<div class="container mx-auto px-4 py-8 max-w-5xl">
    <div class="flex flex-col lg:flex-row bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Product Images Section -->
        <div class="lg:w-1/2">
            @if (Model.Images != null && Model.Images.Any())
            {
                <div class="relative h-96">
                    <img id="mainImage" src="@Model.Images.First().Url" alt="@Model.Title"
                        class="w-full h-full object-cover">
                </div>

                @if (Model.Images.Count > 1)
                {
                    <div class="p-2 flex space-x-2 overflow-x-auto">
                        @foreach (var img in Model.Images)
                        {
                            <img src="@img.Url" alt="Product thumbnail"
                                class="h-20 w-20 object-cover rounded cursor-pointer thumb-image"
                                onclick="setMainImage('@img.Url')">
                        }
                    </div>
                }
            }
            else
            {
                <div class="h-96 bg-gradient-to-r from-blue-300 via-cyan-300 to-sky-300 flex items-center justify-center">
                    <div class="text-white text-xl">No Image Available</div>
                </div>
            }
        </div>

        <!-- Product Details Section -->
        <div class="lg:w-1/2 p-6">
            <div class="flex justify-between items-start">
                <h1 class="text-3xl font-bold mb-2">@Model.Title</h1>
                <div class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full">Buy Now</div>
            </div>

            <p class="text-gray-500 mb-4">
                Category: @(Model.Category?.Name ?? "Uncategorized") •
                Condition: @(Model.Condition?.Name ?? "Unknown")
            </p>

            <div class="text-2xl font-bold text-blue-600 mb-4">@Model.Price.ToString("0.00") €</div>

            <h2 class="text-xl font-semibold mb-2">Description</h2>
            <p class="text-gray-700 mb-6">@(Model.Description ?? "No description available")</p>

            <h2 class="text-xl font-semibold mb-2">Seller</h2>
            @{
                var sellerName = "Unknown seller";
                var sellerId = 0;
                if (Model.Seller != null)
                {
                    var user = Model.Seller as MarketMinds.Shared.Models.User;
                    if (user != null)
                    {
                        sellerName = user.Username ?? sellerName;
                        sellerId = user.Id;
                    }
                }
            }
            <p class="text-gray-700 mb-6">@sellerName</p>

            @if (sellerId > 0 && canPurchase)
            {
                <a asp-controller="Reviews" asp-action="Create" asp-route-sellerId="@sellerId" 
                   class="inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition mb-6">
                    Leave a Review
                </a>
            }

            @if (Model.Tags != null && Model.Tags.Any())
            {
                <div class="mb-6">
                    <h2 class="text-xl font-semibold mb-2">Tags</h2>
                    <div class="flex flex-wrap gap-2">
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">@tag.Title</span>
                        }
                    </div>
                </div>
            }

            <div class="space-y-4">
                @if (canPurchase)
                {
                    <div class="flex space-x-4">
                        <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="flex-1">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit"
                                class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">
                                Add to Cart
                            </button>
                        </form>
                        
                        @{
                            var isInWishlist = ViewBag.WishlistProductIds != null && ((List<int>)ViewBag.WishlistProductIds).Contains(Model.Id);
                        }
                        
                        @if (isInWishlist)
                        {
                            <form asp-controller="BuyerWishlist" asp-action="RemoveFromWishlist" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <button type="submit" class="bg-gray-100 hover:bg-gray-200 text-gray-600 hover:text-red-500 py-3 px-4 rounded-lg transition border border-gray-300" 
                                        title="Remove from Wishlist">
                                    <i class="fas fa-heart text-red-500 text-xl"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-controller="BuyerWishlist" asp-action="AddToWishlist" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <button type="submit" class="bg-gray-100 hover:bg-gray-200 text-gray-600 hover:text-red-500 py-3 px-4 rounded-lg transition border border-gray-300" 
                                        title="Add to Wishlist">
                                    <i class="far fa-heart text-gray-400 text-xl"></i>
                                </button>
                            </form>
                        }
                    </div>
                }

                <a href="javascript:history.back()"
                    class="block text-center w-full border border-blue-600 text-blue-600 py-3 rounded-lg hover:bg-blue-50 transition">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setMainImage(url) {
            document.getElementById('mainImage').src = url;
        }
    </script>
}