<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketMinds.Views.MarketMindsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:models="using:MarketMinds.Shared.Models"
    xmlns:converters="using:MarketMinds.Converters"
    xmlns:controls="using:MarketMinds.Controls"
    xmlns:viewModels="using:MarketMinds.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Page resources to be used for each type of product -->
    <Page.Resources>
        <!-- Pivot underline color override -->
        <SolidColorBrush x:Key="PivotHeaderItemSelectedPipeFill" Color="{ThemeResource SystemAccentColor}"/>

        <viewModels:BuyerWishlistItemViewModel x:Key="BuyerWishlistItemViewModel" />
        
        <converters:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
        <converters:InvertedBoolVisibilityConverter x:Key="InvertedBoolVisibilityConverter"/>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        <converters:UserTypeVisibilityConverter x:Key="UserTypeVisibilityConverter"/>
        <converters:WishlistGlyphConverter x:Key="WishlistGlyphConverter"/>
        <converters:FirstImageUrlConverter x:Key="FirstImageUrlConverter"/>
        <converters:UrlToImageSourceConverter x:Key="UrlToImageSourceConverter"/>
        <converters:BoolToAvailabilityConverter x:Key="BoolToAvailabilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:DateTimeToShortDateConverter x:Key="DateTimeToShortDateConverter"/>
        
        <!-- Custom GridView Item Container Style with rounded corners -->
        <Style x:Key="RoundedGridViewItemContainerStyle" TargetType="GridViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewItem">
                        <Border x:Name="ContentBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentPresenter"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="ContentBorder.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="ContentBorder.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Target="ContentBorder.BorderBrush" Value="{ThemeResource SystemAccentColor}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOverSelected">
                                        <VisualState.Setters>
                                            <Setter Target="ContentBorder.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                            <Setter Target="ContentBorder.BorderBrush" Value="{ThemeResource SystemAccentColor}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PressedSelected">
                                        <VisualState.Setters>
                                            <Setter Target="ContentBorder.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                            <Setter Target="ContentBorder.BorderBrush" Value="{ThemeResource SystemAccentColor}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Common Styles for Product Cards -->
        <Style x:Key="ProductCardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
        
        <Style x:Key="ProductImageBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8,8,0,0"/>
            <Setter Property="Background" Value="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}"/>
        </Style>
        
        <Style x:Key="ProductTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxLines" Value="1"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        
        <Style x:Key="ProductMetadataStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Style>
        
        <Style x:Key="ProductPriceStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ProductActionButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <!-- Common GridView Style -->
        <Style x:Key="ProductGridViewStyle" TargetType="GridView">
            <Setter Property="ItemContainerStyle" Value="{StaticResource RoundedGridViewItemContainerStyle}"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsItemClickEnabled" Value="True"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        
        <DataTemplate x:Key="BuyProductCard" x:DataType="models:BuyProduct">
            <Border Style="{StaticResource ProductCardBorderStyle}"
                    MinHeight="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Product Image -->
                    <Border Grid.Row="0" Style="{StaticResource ProductImageBorderStyle}">
                        <Image Source="{x:Bind Images, Mode=OneWay, Converter={StaticResource UrlToImageSourceConverter}, ConverterParameter='ms-appx:///Assets/Products/default-product.png'}"
                            Stretch="UniformToFill"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>

                    <!-- Product Details -->
                    <StackPanel Grid.Row="1" 
                            Padding="16"
                            Spacing="8">
                        
                        <!-- Product Title -->
                        <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                                Style="{StaticResource ProductTitleStyle}"/>
                        
                        <!-- Category and Condition -->
                        <TextBlock Style="{StaticResource ProductMetadataStyle}">
                            <Run Text="{x:Bind Category.Name, Mode=OneWay}"/>
                            <Run Text=" • "/>
                            <Run Text="{x:Bind Condition.Name, Mode=OneWay}"/>
                        </TextBlock>
                        
                        <!-- Seller Info -->
                        <TextBlock Text="{x:Bind Seller.Username, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='Seller: {0}'}"
                                Style="{StaticResource ProductMetadataStyle}"/>
                        
                        <!-- Price and Wishlist Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Price -->
                            <TextBlock Grid.Column="0"
                                      Text="{x:Bind Price, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='${0}'}"
                                      Style="{StaticResource ProductPriceStyle}"/>
                            
                            <!-- Wishlist Button (Buyer only) -->
                            <Button Grid.Column="1"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Padding="8"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Converter={StaticResource UserTypeVisibilityConverter}, ConverterParameter=Buyer}"
                                   Click="BuyProductCard_AddToWishlist_Click">
                                <FontIcon FontSize="20"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Glyph="{Binding Id, Converter={StaticResource WishlistGlyphConverter}, ConverterParameter={StaticResource BuyerWishlistItemViewModel}}"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Buyer-only Add to Cart button -->
                    <StackPanel Grid.Row="2" 
                               Padding="16,0,16,16" 
                               Visibility="{Binding Converter={StaticResource UserTypeVisibilityConverter}, ConverterParameter=Buyer}">
                        <!-- Add to Cart Button -->
                        <Button Style="{StaticResource ProductActionButtonStyle}"
                               Click="BuyProductCard_AddToCart_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7BF;"/>
                                <TextBlock Text="Add to Cart" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Hidden binding to force reevaluation of wishlist glyphs -->
                    <TextBlock Visibility="Collapsed" Text="{Binding Source={StaticResource BuyerWishlistItemViewModel}, Path=WishlistChanged}" />
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="AuctionProductCard" x:DataType="models:AuctionProduct">
            <Border Style="{StaticResource ProductCardBorderStyle}"
                    MinHeight="350">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Product Image -->
                    <Border Grid.Row="0" Style="{StaticResource ProductImageBorderStyle}">
                        <Image Source="{x:Bind Images, Mode=OneWay, Converter={StaticResource UrlToImageSourceConverter}, ConverterParameter='ms-appx:///Assets/Products/default-product.png'}"
                            Stretch="UniformToFill"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>

                    <!-- Product Details -->
                    <StackPanel Grid.Row="1" 
                            Padding="16"
                            Spacing="8">
                        
                        <!-- Product Title -->
                        <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                                Style="{StaticResource ProductTitleStyle}"/>
                        
                        <!-- Category and Condition -->
                        <TextBlock Style="{StaticResource ProductMetadataStyle}">
                            <Run Text="{x:Bind Category.Name, Mode=OneWay}"/>
                            <Run Text=" • "/>
                            <Run Text="{x:Bind Condition.Name, Mode=OneWay}"/>
                        </TextBlock>
                        
                        <!-- Seller Info -->
                        <TextBlock Text="{x:Bind Seller.Username, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='Seller: {0}'}"
                                Style="{StaticResource ProductMetadataStyle}"/>
                        
                        <!-- Current Price and Starting Price -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Current Price -->
                            <TextBlock Grid.Column="0"
                                      Text="{x:Bind CurrentPrice, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='${0}'}"
                                      Style="{StaticResource ProductPriceStyle}"/>
                            
                            <!-- Starting Price -->
                            <TextBlock Grid.Column="1"
                                      Text="{x:Bind StartPrice, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='Starting: ${0}'}"
                                      Style="{StaticResource ProductMetadataStyle}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Time Left -->
                        <controls:CountdownTimer EndTime="{x:Bind EndTime, Mode=OneWay}"/>
                    </StackPanel>

                    <!-- Action Button -->
                    <StackPanel Grid.Row="2" 
                               Padding="16,0,16,16">
                        <!-- Place Bid Button (Buyer only) -->
                        <Button Style="{StaticResource ProductActionButtonStyle}"
                               Visibility="{Binding Converter={StaticResource UserTypeVisibilityConverter}, ConverterParameter=Buyer}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEC08;"/>
                                <TextBlock Text="Place Bid" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        

        <DataTemplate x:Key="BorrowProductCard" x:DataType="models:BorrowProduct">
            <Border Style="{StaticResource ProductCardBorderStyle}"
                    MinHeight="380">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Product Image -->
                    <Border Grid.Row="0" Style="{StaticResource ProductImageBorderStyle}">
                        <Image Source="{x:Bind Images, Mode=OneWay, Converter={StaticResource UrlToImageSourceConverter}, ConverterParameter='ms-appx:///Assets/Products/default-product.png'}"
                            Stretch="UniformToFill"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>

                    <!-- Product Details -->
                    <StackPanel Grid.Row="1" 
                            Padding="16"
                            Spacing="8">
                        
                        <!-- Product Title -->
                        <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                                Style="{StaticResource ProductTitleStyle}"/>
                        
                        <!-- Category and Condition -->
                        <TextBlock Style="{StaticResource ProductMetadataStyle}">
                            <Run Text="{x:Bind Category.Name, Mode=OneWay}"/>
                            <Run Text=" • "/>
                            <Run Text="{x:Bind Condition.Name, Mode=OneWay}"/>
                        </TextBlock>
                        
                        <!-- Seller Info -->
                        <TextBlock Text="{x:Bind Seller.Username, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='Seller: {0}'}"
                                Style="{StaticResource ProductMetadataStyle}"/>
                        
                        <!-- Daily Rate -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Daily Rate -->
                            <TextBlock Grid.Column="0"
                                      Text="{x:Bind DailyRate, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='${0}'}"
                                      Style="{StaticResource ProductPriceStyle}"/>
                            
                            <!-- Per Day Label -->
                            <TextBlock Grid.Column="1"
                                      Text="Per Day"
                                      Style="{StaticResource ProductMetadataStyle}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Status -->
                        <TextBlock FontSize="14"
                                FontWeight="SemiBold">
                            <Run Text="Status: " Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <Run Text="{x:Bind IsBorrowed, Mode=OneWay, Converter={StaticResource BoolToAvailabilityConverter}}" 
                                 Foreground="{x:Bind IsBorrowed, Mode=OneWay, Converter={StaticResource BoolToColorConverter}}"/>
                        </TextBlock>
                        
                        <!-- Available Dates -->
                        <TextBlock Style="{StaticResource ProductMetadataStyle}">
                            <Run Text="Available: "/>
                            <Run Text="{x:Bind StartDate, Mode=OneWay, Converter={StaticResource DateTimeToShortDateConverter}}"/>
                            <Run Text=" - "/>
                            <Run Text="{x:Bind EndDate, Mode=OneWay, Converter={StaticResource DateTimeToShortDateConverter}}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Action Button -->
                    <StackPanel Grid.Row="2" 
                               Padding="16,0,16,16">
                        <!-- Rent Now Button (Buyer only) -->
                        <Button Style="{StaticResource ProductActionButtonStyle}"
                               Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                               Visibility="{Binding Converter={StaticResource UserTypeVisibilityConverter}, ConverterParameter=Buyer}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE787;" />
                                <TextBlock Text="Rent Now" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.20*"/> <!-- Utility bar - 20% width -->
            <ColumnDefinition Width="0.80*"/> <!-- Content area - 80% width -->
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- Main content -->
            <RowDefinition Height="Auto"/> <!-- Shared pagination controls -->
        </Grid.RowDefinitions>

        <!-- Vertical Utility Bar -->
        <Grid Grid.Column="0" Grid.Row="0" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}" Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Filters header -->
                <RowDefinition Height="Auto"/> <!-- Search box -->
                <RowDefinition Height="Auto"/> <!-- Price Range -->
                <RowDefinition Height="Auto"/> <!-- Categories -->
                <RowDefinition Height="Auto"/> <!-- Condition -->
                <RowDefinition Height="Auto"/> <!-- Clear Filters -->
                <RowDefinition Height="*"/> <!-- Space for future elements -->
            </Grid.RowDefinitions>

            <!-- Filters Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,8,0,16"
                       HorizontalAlignment="Stretch">
                <FontIcon Glyph="&#xE16F;" Margin="0,0,8,0"/>
                <TextBlock Text="Filters" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Search Box -->
            <AutoSuggestBox Grid.Row="1" Margin="0,0,0,16" PlaceholderText="Search products..."
                           QueryIcon="Find" HorizontalAlignment="Stretch"/>
            
            <!-- Price Range -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <TextBlock Text="Price Range" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,8"/>
                <Slider x:Name="PriceRangeSlider" Minimum="1" Maximum="100101" Value="100101"
                       ThumbToolTipValueConverter="{x:Null}"
                       Foreground="{ThemeResource SystemAccentColor}"/>
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="$1" Grid.Column="0" Style="{StaticResource CaptionTextBlockStyle}"/>
                    <!-- TODO: here should be the selected price in the slider -->
                    <TextBlock Text="$100101" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="$100101" Grid.Column="2" Style="{StaticResource CaptionTextBlockStyle}"/>
                </Grid>
            </StackPanel>

            <!-- Categories -->
            <StackPanel Grid.Row="3" Margin="0,0,0,16">
                <TextBlock Text="Categories" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" 
                            CornerRadius="15" Padding="10,5">
                        <TextBlock Text="lmao" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Condition -->
            <StackPanel Grid.Row="4" Margin="0,0,0,16">
                <TextBlock Text="Condition" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <!-- will be filled programmatically - mock data for now -->
                    <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" 
                            CornerRadius="15" Padding="10,5">
                        <TextBlock Text="lmao" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Clear Filters Button -->
            <Button Grid.Row="5" HorizontalAlignment="Stretch" Padding="0,8" Background="Transparent" BorderThickness="1"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}" Click="ClearFilters_Click">
                <!-- will be filled programmatically - mock data for now -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE711;" FontSize="12" Margin="0,0,8,0"/>
                    <TextBlock Text="Clear Filters" Style="{StaticResource CaptionTextBlockStyle}"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Pivot Control -->
        <Pivot Grid.Column="1" Grid.Row="0" x:Name="ProductsPivot" SelectionChanged="ProductsPivot_SelectionChanged">
            <PivotItem Header="Buy Products">
                <Grid>
                    <!-- Loading indicator -->
                    <ProgressRing x:Name="LoadingRing" 
                                 IsActive="{x:Bind IsLoading, Mode=OneWay}"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Width="50" Height="50"
                                 Foreground="{ThemeResource SystemAccentColor}"/>
                    
                    <!-- Products GridView -->
                    <ScrollViewer ZoomMode="Disabled" 
                                 HorizontalScrollMode="Disabled" 
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="{x:Bind IsLoading, Mode=OneWay, Converter={StaticResource InvertedBoolVisibilityConverter}}">
                        <GridView x:Name="BuyProductsGridView"
                                 Style="{StaticResource ProductGridViewStyle}"
                                 ItemTemplate="{StaticResource BuyProductCard}"
                                 ItemsSource="{x:Bind BuyProductsCollection, Mode=OneWay}"
                                 ItemClick="BuyProductCard_Click">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" 
                                                  HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                    
                    <!-- Empty state -->
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Spacing="16"
                               Visibility="{x:Bind ShowEmptyState, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                        <FontIcon Glyph="&#xE7C4;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="No products found" 
                                  Style="{StaticResource SubtitleTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="Auction Products">
                <Grid>
                    <!-- Loading indicator -->
                    <ProgressRing x:Name="AuctionLoadingRing" 
                                 IsActive="{x:Bind IsAuctionLoading, Mode=OneWay}"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Width="50" Height="50"
                                 Foreground="{ThemeResource SystemAccentColor}"/>
                    
                    <!-- Products GridView -->
                    <ScrollViewer ZoomMode="Disabled" 
                                 HorizontalScrollMode="Disabled" 
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="{x:Bind IsAuctionLoading, Mode=OneWay, Converter={StaticResource InvertedBoolVisibilityConverter}}">
                        <GridView x:Name="AuctionProductsGridView"
                                 Style="{StaticResource ProductGridViewStyle}"
                                 ItemTemplate="{StaticResource AuctionProductCard}"
                                 ItemsSource="{x:Bind AuctionProductsCollection, Mode=OneWay}"
                                 ItemClick="AuctionProductCard_Click">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" 
                                                  HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                    
                    <!-- Empty state -->
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Spacing="16"
                               Visibility="{x:Bind ShowAuctionEmptyState, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                        <FontIcon Glyph="&#xE8A7;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="No auction products found" 
                                  Style="{StaticResource SubtitleTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="Borrow Products">
                <Grid>
                    <!-- Loading indicator -->
                    <ProgressRing x:Name="BorrowLoadingRing" 
                                 IsActive="{x:Bind IsBorrowLoading, Mode=OneWay}"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Width="50" Height="50"
                                 Foreground="{ThemeResource SystemAccentColor}"/>
                    
                    <!-- Products GridView -->
                    <ScrollViewer ZoomMode="Disabled" 
                                 HorizontalScrollMode="Disabled" 
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="{x:Bind IsBorrowLoading, Mode=OneWay, Converter={StaticResource InvertedBoolVisibilityConverter}}">
                        <GridView x:Name="BorrowProductsGridView"
                                 Style="{StaticResource ProductGridViewStyle}"
                                 ItemTemplate="{StaticResource BorrowProductCard}"
                                 ItemsSource="{x:Bind BorrowProductsCollection, Mode=OneWay}"
                                 ItemClick="BorrowProductCard_Click">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" 
                                                  HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                    
                    <!-- Empty state -->
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Spacing="16"
                               Visibility="{x:Bind ShowBorrowEmptyState, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                        <FontIcon Glyph="&#xE8F4;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="No borrow products found" 
                                  Style="{StaticResource SubtitleTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </PivotItem>
        </Pivot>
        
        <!-- Shared Pagination Controls -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Spacing="16"
                   Margin="16"
                   Visibility="{x:Bind ShowPaginationForCurrentTab, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
            
            <!-- Items per page selector -->
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Items per page:" 
                          VerticalAlignment="Center"
                          Style="{StaticResource CaptionTextBlockStyle}"/>
                <ComboBox x:Name="ItemsPerPageComboBox"
                         SelectedIndex="1"
                         SelectionChanged="ItemsPerPageComboBox_SelectionChanged"
                         MinWidth="60">
                    <ComboBoxItem Content="5" Tag="5"/>
                    <ComboBoxItem Content="10" Tag="10"/>
                    <ComboBoxItem Content="15" Tag="15"/>
                    <ComboBoxItem Content="20" Tag="20"/>
                    <ComboBoxItem Content="25" Tag="25"/>
                </ComboBox>
            </StackPanel>
            
            <!-- PipsPager -->
            <PipsPager x:Name="SharedPager"
                      NumberOfPages="{x:Bind TotalPages, Mode=OneWay}"
                      SelectedPageIndex="{x:Bind CurrentPageIndex, Mode=TwoWay}"
                      PreviousButtonVisibility="Visible"
                      NextButtonVisibility="Visible"/>
            
            <!-- Page info -->
            <TextBlock Text="{x:Bind PageInfoText, Mode=OneWay}"
                      VerticalAlignment="Center"
                      Style="{StaticResource CaptionTextBlockStyle}"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>