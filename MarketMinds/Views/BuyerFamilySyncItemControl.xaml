<UserControl
    x:Class="MarketMinds.Views.BuyerFamilySyncItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="Auto" Height="Auto">

    <Border BorderThickness="2" BorderBrush="#1976D2" Padding="10"
            Margin="5" CornerRadius="8" Background="White"
            Height="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="16"
                       FontWeight="Bold"
                       Foreground="#0D47A1" Text="{x:Bind ViewModel.DisplayName, Mode=OneWay}" 
                       VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                <!-- Request Sync Button -->
                <Button Width="50" Height="50" 
                        ToolTipService.ToolTip="Request sync"
                        Visibility="{x:Bind ViewModel.RequestSyncVsbl, Mode=OneWay}"
                        Click="{x:Bind ViewModel.Accept}">
                    <Image Width="25" Height="25">
                        <Image.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/BuyerIcons/link.svg" />
                        </Image.Source>
                    </Image>
                </Button>

                <!-- Cancel Button -->
                <Button Width="50" Height="50"
                        ToolTipService.ToolTip="Cancel request"
                        Visibility="{x:Bind ViewModel.CancelRequestVsbl, Mode=OneWay}"
                        Click="{x:Bind ViewModel.Cancel}">
                    <Image Width="25" Height="25">
                        <Image.Source>
                            <BitmapImage UriSource="ms-appx:///Assets/BuyerIcons/unlink.png" />
                        </Image.Source>
                    </Image>
                </Button>

                <!-- Accept Button -->
                <Button Width="50" Height="50" 
                        ToolTipService.ToolTip="Accept"
                        Visibility="{x:Bind ViewModel.AcceptVsbl, Mode=OneWay}"
                        Click="{x:Bind ViewModel.Accept}">
                    <Image Width="25" Height="25">
                        <Image.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/BuyerIcons/check.svg" />
                        </Image.Source>
                    </Image>
                </Button>

                <!-- Decline Button -->
                <Button Width="50" Height="50" 
                        ToolTipService.ToolTip="Decline"
                        Visibility="{x:Bind ViewModel.DeclineVsbl, Mode=OneWay}"
                        Click="{x:Bind ViewModel.Decline}">
                    <Image Width="25" Height="25">
                        <Image.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/BuyerIcons/cross.svg" />
                        </Image.Source>
                    </Image>
                </Button>

                <!-- Unsync Button -->
                <Button Width="50" Height="50" 
                        ToolTipService.ToolTip="Unsync"
                        Visibility="{x:Bind ViewModel.UnsyncVsbl, Mode=OneWay}"
                        Click="{x:Bind ViewModel.Unsync}">
                    <Image Width="25" Height="25">
                        <Image.Source>
                            <BitmapImage UriSource="ms-appx:///Assets/BuyerIcons/unlink.png" />
                        </Image.Source>
                    </Image>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>