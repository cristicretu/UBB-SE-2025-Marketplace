<Page
    x:Class="MarketMinds.Views.CreateListingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:converters="using:MarketMinds.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                      HorizontalAlignment="Center" VerticalAlignment="Top"
                      Padding="20">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    Padding="40" 
                    CornerRadius="12" 
                    BorderBrush="{ThemeResource SystemAccentColor}" 
                    BorderThickness="1" 
                    MaxWidth="1100">
                <StackPanel HorizontalAlignment="Center" MaxWidth="1000">
                    <TextBlock Text="Create a Listing" 
                               Margin="0,10,0,10" 
                               FontSize="32" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Sell, auction, or lend your item to the community" 
                               Margin="0,0,0,20" 
                               FontSize="16" 
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <!-- Listing Type Section -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE8F1;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Listing Type" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Choose how you want to offer your item" 
                                   Margin="0,0,0,12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        
                        <!-- Listing Type Selection Cards -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Sell Card -->
                            <Border x:Name="SellCard" Grid.Column="0" 
                                    Margin="4" Padding="16" 
                                    CornerRadius="8" 
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    PointerPressed="ListingTypeCard_PointerPressed" 
                                    Tag="Buy"
                                    MinWidth="200"
                                    Height="120">      
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE719;" 
                                              FontSize="24" 
                                              Foreground="{ThemeResource SystemAccentColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Sell" 
                                               FontWeight="SemiBold" 
                                               Margin="0,8,0,4"
                                               HorizontalAlignment="Center"/>   
                                    <TextBlock Text="Set a fixed price to sell" 
                                               TextWrapping="Wrap"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextAlignment="Center"
                                               FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <!-- Auction Card -->
                            <Border x:Name="AuctionCard" Grid.Column="1" 
                                    Margin="4" Padding="16" 
                                    CornerRadius="8" 
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    PointerPressed="ListingTypeCard_PointerPressed" 
                                    Tag="Auction"
                                    MinWidth="200"
                                    Height="120">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xEC08;"
                                              FontSize="24" 
                                              Foreground="{ThemeResource SystemAccentColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Auction" 
                                               FontWeight="SemiBold" 
                                               Margin="0,8,0,4"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Let buyers bid on your item" 
                                               TextWrapping="Wrap"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextAlignment="Center"
                                               FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <!-- Lend Card -->
                            <Border x:Name="LendCard" Grid.Column="2" 
                                    Margin="4" Padding="16" 
                                    CornerRadius="8" 
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    PointerPressed="ListingTypeCard_PointerPressed" 
                                    Tag="Borrow"
                                    MinWidth="200"
                                    Height="120">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE8EE;" 
                                              FontSize="24" 
                                              Foreground="{ThemeResource SystemAccentColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Lend" 
                                               FontWeight="SemiBold" 
                                               Margin="0,8,0,4"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Rent out your item daily" 
                                               TextWrapping="Wrap"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextAlignment="Center"
                                               FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <TextBlock x:Name="listingTypeErrorTextBlock" 
                                   Text="Please select a listing type." 
                                   Foreground="{ThemeResource SystemErrorTextColor}" 
                                   Visibility="Collapsed" 
                                   Margin="0,8,0,0" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Basic Information Section -->
                    <StackPanel Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE946;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Basic Information" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Title Field -->
                        <TextBlock Text="Title" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <TextBox x:Name="TitleTextBox"
                                     PlaceholderText="What are you offering?"
                                     Text="{x:Bind ViewModel.Title, Mode=TwoWay}"
                                     Width="700"
                                     Height="40"
                                     Padding="40,5,0,0"
                                     CornerRadius="4"/>
                            <FontIcon Glyph="&#xF158;"
                                      FontSize="16"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,5"/>
                        </Grid>
                        <TextBlock x:Name="TitleErrorTextBlock"
                                   Text="Title cannot be empty."
                                   Foreground="{ThemeResource SystemErrorTextColor}"
                                   Visibility="Collapsed"
                                   Margin="0,4,0,0"/>
                        
                        <!-- Category and Condition on same row -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Category Field -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Category" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <ComboBox x:Name="CategoryComboBox"
                                              PlaceholderText="Choose a category"
                                              SelectedItem="{x:Bind ViewModel.Category, Mode=TwoWay}"
                                              HorizontalAlignment="Stretch"
                                              Height="40"
                                              Padding="40,8,12,8"
                                              CornerRadius="4"/>
                                    <FontIcon Glyph="&#xE7C1;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                                <TextBlock x:Name="CategoryErrorTextBlock"
                                           Text="Please select a category."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Condition Field -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Condition" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <ComboBox x:Name="ConditionComboBox"
                                              PlaceholderText="Select condition"
                                              SelectedItem="{x:Bind ViewModel.Condition, Mode=TwoWay}"
                                              HorizontalAlignment="Stretch"
                                              Height="40"
                                              Padding="40,8,12,8"
                                              CornerRadius="4"/>
                                    <FontIcon Glyph="&#xE9CE;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                                <TextBlock x:Name="ConditionErrorTextBlock"
                                           Text="Please select a condition."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Description Field -->
                        <TextBlock Text="Description" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,16,0,8"/>
                        <Grid>
                            <TextBox x:Name="DescriptionTextBox"
                                     PlaceholderText="Describe your item in detail..."
                                     Text="{x:Bind ViewModel.Description, Mode=TwoWay}"
                                     Width="700"
                                     MinHeight="40"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     IsSpellCheckEnabled="True"
                                     Padding="40,7,0,10"
                                     CornerRadius="4"/>
                            <FontIcon Glyph="&#xE932;" 
                                    FontSize="16"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="12,10,0,0"/>
                        </Grid>
                        
                        <TextBlock x:Name="DescriptionErrorTextBlock"
                                   Text="Description cannot be empty."
                                   Foreground="{ThemeResource SystemErrorTextColor}"
                                   Visibility="Collapsed"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Photos Section -->
                    <StackPanel Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xEB9F;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Photos" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Add photos to showcase your item (automatically uploaded)" 
                                   Margin="0,0,0,12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        
                        <Border x:Name="UploadBorder"
                                Background="Transparent" 
                                CornerRadius="8"
                                Padding="10"
                                Width="700"
                                Margin="0,10,0,0"
                                Tapped="UploadBorder_Tapped"
                                PointerEntered="UploadBorder_PointerEntered"
                                PointerExited="UploadBorder_PointerExited">
                            <Grid>
                                <!-- Dashed border using Rectangle -->
                                <Rectangle Stroke="{ThemeResource SystemAccentColor}" 
                                           StrokeThickness="1"
                                           StrokeDashArray="4,2"
                                           RadiusX="8" RadiusY="8"
                                           Fill="{ThemeResource ControlFillColorDefaultBrush}"
                                           Margin="-1"/>
                                
                                <StackPanel HorizontalAlignment="Center">
                                    <FontIcon Glyph="&#xE898;" 
                                              FontSize="32" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,15,0,0"/>
                                    <TextBlock Text="Click to upload" 
                                               Foreground="{ThemeResource SystemAccentColor}" 
                                               FontWeight="SemiBold"
                                               Margin="0,10,0,5"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="PNG, JPG, GIF up to 10MB" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               FontSize="12"
                                               Margin="0,0,0,15"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Image url:"
                                       Foreground="{ThemeResource SystemAccentColor}"/>

                            <TextBlock x:Name="ImagesTextBlock"
                                   Text="{x:Bind ViewModel.ImagesString, Mode=OneWay}"
                                   TextWrapping="Wrap"
                                   Width="600"
                                   Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Tags Section -->
                    <StackPanel Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE8EC;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Tags" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Add tags to help buyers find your item (click to remove)" 
                                   Margin="0,0,0,12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                        <Grid>
                            <FontIcon Glyph="&#xE8EC;"
                                  FontSize="16"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,5"/>
                            <TextBox x:Name="TagsTextBox"
                                     PlaceholderText="Type to add tags"
                                     Width="600"
                                     Height="40"
                                     Padding="40,5,0,0"
                                     CornerRadius="4"
                                     KeyDown="TagsTextBox_KeyDown"
                                     HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Right"
                                        Margin="0,0,135,0"
                                        Opacity="0.5">
                                <TextBlock Text="Press" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <FontIcon Glyph="&#xE751;" 
                                          FontSize="14"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!--Add button to replicate return press-->
                            <Button Content="Add"
                                    Width="90"
                                    Height="40"
                                    Background="{ThemeResource SystemAccentColor}"
                                    HorizontalAlignment="Right"
                                    Click="TagsAddButton_Click"/>
                        </Grid>
                        
                        <TextBlock x:Name="TagsErrorTextBlock"
                                   Text="Please add at least one tag."
                                   Foreground="{ThemeResource SystemErrorTextColor}"
                                   Visibility="Collapsed"
                                   Margin="0,4,0,0"/>
                        
                        <ListView x:Name="TagsListView"
                                  ItemsSource="{x:Bind Tags, Mode=OneWay}"
                                  Width="700"
                                  Height="100"
                                  Margin="0,8,0,0"
                                  BorderThickness="0.5"
                                  BorderBrush="{ThemeResource SystemAccentColor}"
                                  Background="{ThemeResource ControlFillColorDefaultBrush}"
                                  CornerRadius="4"
                                  IsItemClickEnabled="True"
                                  ItemClick="TagsListView_ItemClick"/>
                    </StackPanel>

                    <!-- Hidden ComboBox to maintain compatibility with existing code -->
                    <ComboBox x:Name="ListingTypeComboBox" 
                              Width="200" 
                              SelectionChanged="ListingTypeComboBox_SelectionChanged" 
                              Margin="0,10,0,10" 
                              HorizontalAlignment="Center"
                              Visibility="Collapsed">
                        <ComboBoxItem Content="Buy"/>
                        <ComboBoxItem Content="Borrow"/>
                        <ComboBoxItem Content="Auction"/>
                    </ComboBox>

                    <!-- Buy Product Fields Section -->
                    <StackPanel x:Name="BuyProductFieldsSection" 
                                Visibility="{x:Bind ViewModel.IsBuyProductType, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xEB0D;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Pricing &amp; Stock" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Price Field -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Price *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <TextBox x:Name="PriceTextBox"
                                             PlaceholderText="Enter price"
                                             Text="{x:Bind ViewModel.Price, Mode=TwoWay}"
                                             HorizontalAlignment="Stretch"
                                             Height="40"
                                             Padding="40,5,0,0"
                                             CornerRadius="4"/>
                                    <FontIcon Glyph="&#xE8A0;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,5"/>
                                </Grid>
                                <TextBlock x:Name="PriceErrorTextBlock"
                                           Text="Please enter a valid price."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Stock Quantity Field -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Stock Quantity *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <TextBox x:Name="StockTextBox"
                                             PlaceholderText="1"
                                             Text="{x:Bind ViewModel.StockQuantity, Mode=TwoWay}"
                                             HorizontalAlignment="Stretch"
                                             Height="40"
                                             Padding="40,5,10,0"
                                             CornerRadius="4"/>
                                    <FontIcon Glyph="&#xEBD2;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,5"/>
                                </Grid>
                                <TextBlock Text="Number of items available" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="StockErrorTextBlock"
                                           Text="Please enter a valid stock quantity."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Borrow Product Fields Section -->
                    <StackPanel x:Name="BorrowProductFieldsSection" 
                                Visibility="{x:Bind ViewModel.IsBorrowProductType, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE7BF;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Rental Details" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid Margin="0,16,0,0" MaxWidth="700">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="220"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*" MaxWidth="220"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*" MaxWidth="220"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Available From Field -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Available From *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <CalendarDatePicker x:Name="StartDatePicker"
                                                        PlaceholderText="Select start date"
                                                        Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"
                                                        HorizontalAlignment="Stretch"
                                                        Height="40"
                                                        Padding="40,0,12,0"
                                                        CornerRadius="4"
                                                        DateChanged="StartDatePicker_DateChanged"/>
                                </Grid>
                                <TextBlock x:Name="StartDateErrorTextBlock"
                                           Text="Please select a start date."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Available To Field -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Available To *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <CalendarDatePicker x:Name="TimeLimitDatePicker"
                                                        PlaceholderText="Select end date"
                                                        Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}"
                                                        HorizontalAlignment="Stretch"
                                                        Height="40"
                                                        Padding="40,0,12,0"
                                                        CornerRadius="4"/>
                                </Grid>
                                <TextBlock x:Name="EndDateErrorTextBlock"
                                           Text="Please select an end date."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Daily Rate Field -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Daily Rate *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <TextBox x:Name="DailyRateTextBox"
                                             PlaceholderText="Enter daily rate"
                                             Text="{x:Bind ViewModel.DailyRate, Mode=TwoWay}"
                                             HorizontalAlignment="Stretch"
                                             Height="40"
                                             Padding="40,8,12,0"
                                             CornerRadius="4"/>
                                    <FontIcon Glyph="&#xE8A0;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                                <TextBlock Text="Price per day" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="DailyRateErrorTextBlock"
                                           Text="Please enter a valid daily rate."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Auction Product Fields Section -->
                    <StackPanel x:Name="AuctionProductFieldsSection" 
                                Visibility="{x:Bind ViewModel.IsAuctionProductType, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,10" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xEC08;" 
                                      FontSize="18" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Auction Details" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Starting Bid Field -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Starting Bid *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <TextBox x:Name="StartingBidTextBox"
                                             PlaceholderText="Enter starting bid"
                                             Text="{x:Bind ViewModel.StartingBid, Mode=TwoWay}"
                                             HorizontalAlignment="Stretch"
                                             Height="40"
                                             Padding="40,8,12,0"
                                             CornerRadius="4"/>
                                    <FontIcon Glyph="&#xE8A0;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                                <TextBlock Text="Minimum bid amount" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="StartingBidErrorTextBlock"
                                           Text="Please enter a valid starting bid."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Auction End Date Field -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Auction End Date *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <CalendarDatePicker x:Name="AuctionEndDatePicker"
                                                        PlaceholderText="Select end date"
                                                        Date="{x:Bind ViewModel.AuctionEndDate, Mode=TwoWay}"
                                                        HorizontalAlignment="Stretch"
                                                        Height="40"
                                                        Padding="40,0,12,0"
                                                        CornerRadius="4"/>
                                </Grid>
                                <TextBlock x:Name="AuctionEndDateErrorTextBlock"
                                           Text="Please select an end date."
                                           Foreground="{ThemeResource SystemErrorTextColor}"
                                           Visibility="Collapsed"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Button x:Name="createListingButton" 
                            Content="{x:Bind ViewModel.CreateButtonText, Mode=OneWay}" 
                            Click="CreateListingButton_Click" 
                            Margin="0,20,0,10" 
                            HorizontalAlignment="Center"
                            Background="{ThemeResource SystemAccentColor}"
                            Padding="24,8"
                            MinWidth="200"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
