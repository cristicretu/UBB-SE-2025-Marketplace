<Window
    x:Class="MarketMinds.BuyProductView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Product Details">
    <Grid>
        <ScrollViewer>
            <Grid ColumnDefinitions="1*,1*"
                  Padding="20"
                  ColumnSpacing="60"
                  Margin="20,20,20,0">
                <!-- Left Panel -->
                <StackPanel Grid.Column="0"
                            Spacing="12">
                    <!-- Title -->
                    <TextBlock x:Name="TitleTextBlock"
                               FontSize="24"
                               FontWeight="Bold"/>

                    <!-- Image Carousel -->
                    <FlipView x:Name="ImageCarousel"
                              Height="250"/>

                    <!-- Category -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <TextBlock Text="Category:"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="CategoryTextBlock"/>
                    </StackPanel>

                    <!-- Tags (Horizontal Wrap Panel) -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="10"
                                VerticalAlignment="Center">
                        <TextBlock Text="Tags:"
                                   FontWeight="Bold"
                                   Margin="0,0,5,0"/>
                        <ItemsControl x:Name="TagsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Condition -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <TextBlock Text="Condition:"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="ConditionTextBlock"/>
                    </StackPanel>

                    <!-- Buying Details -->
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Vertical"
                                    Spacing="4">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="10">
                                <TextBlock Text="Price:"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="PriceTextBlock"/>
                            </StackPanel>
                            <Button Content="Add to basket"
                                    Click="OnAddToBasketClicked"
                                    Width="120"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Right Panel -->
                <StackPanel Grid.Column="1"
                            Spacing="12">
                    <!-- Seller Info -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <TextBlock Text="Seller:"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="SellerTextBlock"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <Button Content="See Seller Reviews"
                                Click="OnSeeReviewsClicked"
                                Width="160"/>
                        <Button Content="Leave a Review"
                                Click="OnLeaveReviewClicked"
                                Width="160"/>
                    </StackPanel>

                    <!-- Description -->
                    <TextBlock Text="Description:"
                               FontWeight="Bold"/>
                    <TextBox x:Name="DescriptionTextBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             Height="100"
                             BorderThickness="1"
                             BorderBrush="{ThemeResource TextBoxBorderThemeBrush}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <TeachingTip x:Name="BasketNotificationTip"
                     Title="Basket Notification"
                     IsLightDismissEnabled="True"
                     PreferredPlacement="BottomRight"
                     CloseButtonContent="OK"
                     ShouldConstrainToRootBounds="True"/>
    </Grid>
</Window>