<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketMinds.Views.Pages.LeaveSellerReviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,24">
            <TextBlock Text="Leave a Review" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       FontWeight="SemiBold"/>
              <StackPanel Spacing="8">
                <TextBlock Text="Product:" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="{Binding ReviewData.ProductTitle}"
                           FontWeight="Medium"/>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Seller:" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="{Binding ReviewData.SellerName}"
                           FontWeight="Medium"/>
            </StackPanel>
        </StackPanel>

        <!-- Review Form -->
        <StackPanel Grid.Row="1" Spacing="24">
            <StackPanel Spacing="12">
                <TextBlock Text="Rating:" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>                <RatingControl Value="{Binding RatingValue, Mode=TwoWay}"
                               Caption="Tap a star to rate"
                               IsReadOnly="False"/>
            </StackPanel>

            <StackPanel Spacing="12">
                <TextBlock Text="Review:"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBox PlaceholderText="Share your experience with this seller..."
                         Text="{Binding ReviewText, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="200"/>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="12"
                    Margin="0,24,0,0">
            <Button Content="Cancel"
                    Background="Transparent"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    Padding="16,10"
                    CornerRadius="4"
                    Click="CancelButton_Click"/>
            
            <Button Content="Submit Review"
                    Background="{ThemeResource SystemAccentColor}"
                    Foreground="{ThemeResource AccentButtonForeground}"
                    Padding="16,10"
                    CornerRadius="4"
                    Click="SubmitReview_Click"/>
        </StackPanel>
    </Grid>
</Page>
