<?xml version="1.0" encoding="utf-8"?>
<Page 
    x:Class="MarketMinds.Views.SellerProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:converters="using:MarketMinds.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Converter to show element when true -->
        <converters:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
        <!-- Converter to show element when false -->
        <converters:InvertedBoolVisibilityConverter x:Key="InvertedBoolVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Loading Screen -->
        <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Spacing="20">
                <ProgressRing IsActive="True" 
                              Width="60" 
                              Height="60"
                              Foreground="{ThemeResource SystemAccentColor}"/>
                <TextBlock Text="Loading profile data..." 
                           FontSize="16"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content - Only visible when not loading -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource InvertedBoolVisibilityConverter}}" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="400"/>
                <ColumnDefinition Width="Auto" MinWidth="600"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Store Information Display -->
            <ScrollViewer Grid.Column="0" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="20,20,0,20">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        Padding="30"
                        CornerRadius="12"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="20">
                        <!-- Header with Icon and Title -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE72D;" 
                                      FontSize="24" 
                                      Foreground="{ThemeResource SystemAccentColor}"/>
                            <TextBlock Text="Store Information" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Profile Picture and Store Name -->
                        <StackPanel HorizontalAlignment="Center" Spacing="15">
                            <Border Background="{ThemeResource SystemAccentColor}" 
                                    Width="120" 
                                    Height="120" 
                                    CornerRadius="60">
                                <FontIcon Glyph="&#xE77B;" 
                                          FontSize="60" 
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="{Binding StoreName}" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                            
                            <TextBlock Text="{Binding StoreDescription}" 
                                       FontSize="14" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="300"/>
                        </StackPanel>

                        <!-- Contact Information -->
                        <StackPanel Spacing="12">
                            <!-- Address -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE707;" 
                                          FontSize="16" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding StoreAddress}" 
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE715;" 
                                          FontSize="16" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Email}" 
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Phone -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE717;" 
                                          FontSize="16" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding PhoneNumber}" 
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Statistics -->
                        <Border Background="{ThemeResource ControlFillColorDefaultBrush}" 
                                Padding="20" 
                                CornerRadius="8"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Trust Score -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Spacing="8">
                                    <RatingControl Value="{Binding RatingValue}" 
                                                   IsReadOnly="True"
                                                   PlaceholderValue="0"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{ThemeResource SystemAccentColor}"
                                                   x:Name="TrustScoreRating"/>
                                    <TextBlock Text="Trust Score" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Followers -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Spacing="8">
                                    <TextBlock Text="{Binding FollowersCount}" 
                                               FontSize="20" 
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Followers" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- Right Panel - Edit Form -->
            <ScrollViewer Grid.Column="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="0,20,20,20">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        Padding="30"
                        CornerRadius="12"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="30">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE77B;" 
                                      FontSize="24" 
                                      Foreground="{ThemeResource SystemAccentColor}"/>
                            <TextBlock Text="Account Information" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Account Information Section -->
                        <StackPanel Spacing="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Username -->
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Username *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <Grid>
                                        <TextBox Text="{Binding Username, Mode=TwoWay}" 
                                                 PlaceholderText="Enter your username"
                                                 Height="40"
                                                 Padding="40,8,12,0"
                                                 CornerRadius="4"
                                                 Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                                        <FontIcon Glyph="&#xE77B;" 
                                                  FontSize="16"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Email -->
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="Email Address *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <Grid>
                                        <TextBox Text="{Binding Email, Mode=TwoWay}" 
                                                 PlaceholderText="Enter your store email address"
                                                 Height="40"
                                                 Padding="40,8,12,0"
                                                 CornerRadius="4"
                                                 Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                                        <FontIcon Glyph="&#xE715;" 
                                                  FontSize="16"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Contact Information Section -->
                        <StackPanel Spacing="20">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE717;" 
                                          FontSize="18" 
                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                <TextBlock Text="Contact Information" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Phone Number -->
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Phone Number *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <Grid>
                                        <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}" 
                                                 PlaceholderText="Enter your phone number"
                                                 Height="40"
                                                 Padding="40,8,12,0"
                                                 CornerRadius="4"
                                                 Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                                        <FontIcon Glyph="&#xE717;" 
                                                  FontSize="16"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Address -->
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="Address *" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <Grid>
                                        <TextBox Text="{Binding StoreAddress, Mode=TwoWay}" 
                                                 PlaceholderText="Enter your store address"
                                                 Height="40"
                                                 Padding="40,8,12,0"
                                                 CornerRadius="4"
                                                 Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                                        <FontIcon Glyph="&#xE707;" 
                                                  FontSize="16"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Store Information Section -->
                        <StackPanel Spacing="20">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE72D;" 
                                          FontSize="18" 
                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                <TextBlock Text="Store Information" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Store Name -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Store Name *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <Grid>
                                    <TextBox Text="{Binding StoreName, Mode=TwoWay}" 
                                             PlaceholderText="Enter your store name"
                                             Height="40"
                                             Padding="40,8,12,0"
                                             CornerRadius="4"
                                             Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                                    <FontIcon Glyph="&#xE72D;" 
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Store Description -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Store Description *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBox Text="{Binding StoreDescription, Mode=TwoWay}" 
                                         PlaceholderText="Describe your store and what you sell"
                                         MinHeight="100"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Padding="12"
                                         CornerRadius="4"
                                         Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Margin="0,20,0,0">
                            <Button Content="Save Changes" 
                                    Click="OnUpdateProfileButtonClick"
                                    HorizontalAlignment="Stretch"
                                    Height="50"
                                    CornerRadius="4"
                                    Background="{ThemeResource SystemAccentColor}"
                                    Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
