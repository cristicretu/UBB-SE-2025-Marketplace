<?xml version="1.0" encoding="utf-8"?>
<Page 
    x:Class="MarketMinds.Views.SellerProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <!-- Main Content Grid -->
        <Grid Grid.Column="1" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Seller Info -->
                <RowDefinition Height="Auto"/>
                <!-- Controls -->
                <RowDefinition Height="*"/>
                <!-- Products Grid -->
            </Grid.RowDefinitions>

            <!-- Seller Profile Header Section -->
            <Border Background="#0D47A1" Padding="20">
                <StackPanel Orientation="Horizontal">
                    <!-- Profile Picture -->
                    <PersonPicture x:Name="ProfilePicture" DisplayName="{Binding StoreName}" 
                                   Width="90" Height="90" Margin="0,0,30,0"
                                   Foreground="#0D47A1" Background="AliceBlue"/>

                    <!-- Profile Info -->
                    <StackPanel MaxWidth="350">
                        <TextBlock Text="{Binding StoreName}" FontSize="32" FontWeight="Bold" Foreground="AliceBlue" Margin="0,0,0,10" />

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Email:" FontWeight="Bold" Foreground="AliceBlue" />
                            <TextBlock Text="{Binding Email}" Margin="5,0,0,0" Foreground="AliceBlue" TextTrimming="CharacterEllipsis" />
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Phone:" FontWeight="Bold" Foreground="AliceBlue" />
                            <TextBlock Text="{Binding PhoneNumber}" Margin="5,0,0,0" Foreground="AliceBlue" />
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Address:" FontWeight="Bold" Foreground="AliceBlue" />
                            <TextBlock Text="{Binding StoreAddress}" Margin="5,0,0,0" Foreground="AliceBlue" TextWrapping="Wrap" />
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Description:" FontWeight="Bold" Foreground="AliceBlue" />
                            <TextBlock Text="{Binding StoreDescription}" Margin="5,0,0,0" Foreground="AliceBlue" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="50,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Followers:" FontWeight="Bold" FontSize="18" Foreground="AliceBlue" />
                            <TextBlock Text="{Binding FollowersCount}" Margin="5,0,0,0" FontSize="18" Foreground="AliceBlue" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Trust Score:" FontWeight="Bold" FontSize="18" Foreground="AliceBlue" />
                            <ProgressBar Value="{Binding TrustScore}" Maximum="100" Width="100" Height="20" Margin="5,0,0,0" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Update Profile Button -->
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="50,0,0,0">
                        <Button Content="Update Profile" Click="OnUpdateProfileButtonClick" 
                                Width="180" Height="55" Margin="10,0,0,10"
                                Style="{StaticResource UpdateButton}" />
                        <Button Content="Borrow Products" Click="OnBorrowProductsButtonClick"
                            Width="180" Height="55" Margin="10,0,0,10"
                            Style="{StaticResource PrimaryButton}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Search & Sort Controls -->
            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" PlaceholderText="Search" Height="40"
                         Margin="0,0,10,0" TextChanged="OnSearchTextChanged"
                         Background="#0D47A1" Foreground="White"
                         BorderBrush="Gray" Padding="10" />

                <Button Grid.Column="1" Content="Sort" Width="120" Height="40" 
                        Click="OnSortButtonClick" 
                        Style="{StaticResource PrimaryButton}" />
            </Grid>

            <!-- Product Grid -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid ItemWidth="980" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="AliceBlue" Padding="10" CornerRadius="10" Margin="5"
                                    BorderBrush="#0D47A1" BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="$" FontSize="20" FontWeight="ExtraBold" Foreground="Green"/>
                                        <TextBlock Text="{Binding Price}" FontSize="20" FontWeight="ExtraBold" Foreground="Green"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="#0D47A1"/>
                                    <TextBlock Text="{Binding Description}" FontSize="16" Foreground="#0D47A1" TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding Stock}" FontSize="16"
                                               Foreground="{Binding Stock, Converter={StaticResource StockToColorConverter}}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Notifications Panel (Floating Right Panel) -->
        <StackPanel Grid.Column="1" Width="Auto" Height="Auto" 
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="10,30,30,30" Padding="10">
            <Expander
                IsExpanded="{Binding IsExpanderExpanded, Mode=TwoWay}"
                ExpandDirection="Down"
                VerticalAlignment="Top"
                Header="ðŸ”” Notifications"
                Width="300"
                MaxHeight="200">
                <ListBox ItemsSource="{Binding Notifications}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
