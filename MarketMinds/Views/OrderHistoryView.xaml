<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketMinds.Views.OrderHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MarketMinds.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Converter for Boolean to Expand/Collapse Icon -->
        <local:BoolToExpandIconConverter x:Key="BoolToExpandIconConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="20,10">
            <TextBlock Text="ðŸ“‹ Order History" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,5"
                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            <TextBlock Text="Track your orders and their status" 
                      FontSize="14" 
                      Margin="0,0,0,15"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Filter Controls -->
        <StackPanel Orientation="Horizontal" 
                   Grid.Row="0" 
                   Padding="20,60,20,10" 
                   Spacing="15" 
                   Background="{ThemeResource ControlFillColorSecondaryBrush}">

            <TextBlock Text="Search Orders" 
                      VerticalAlignment="Center" 
                      FontWeight="SemiBold"
                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            <TextBox x:Name="SearchTextBox" 
                    PlaceholderText="Search by product name, order ID, or category..."
                    Width="300"
                    TextChanged="SearchTextBox_TextChanged"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"/>

            <TextBlock Text="Time Period" 
                      VerticalAlignment="Center" 
                      FontWeight="SemiBold"
                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            <ComboBox x:Name="TimePeriodComboBox" Width="150" SelectedIndex="0"
                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                      Background="{ThemeResource ControlFillColorDefaultBrush}">
                <ComboBoxItem Content="Last 3 Months"/>
                <ComboBoxItem Content="Last 6 Months"/>
                <ComboBoxItem Content="This Year"/>
                <ComboBoxItem Content="All Orders"/>
            </ComboBox>

            <Button Content="ðŸ”„ Refresh" 
                   Click="RefreshButton_Click"
                   Background="{ThemeResource SystemAccentColor}"
                   Foreground="{ThemeResource AccentButtonForeground}"
                   Padding="15,8"/>
        </StackPanel>

        <!-- Orders ListView with Grouping -->
        <ListView x:Name="OrdersListView" 
                 Grid.Row="1"
                 Margin="20,10,20,20"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                 BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                 BorderThickness="1">

            <!-- Item Template for OrderGroup -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <!-- Group Header -->
                        <Button Background="{ThemeResource ControlFillColorSecondaryBrush}" 
                               BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                               BorderThickness="0,0,0,1" 
                               Padding="15,12" 
                               Margin="0,5,0,0"
                               Click="ToggleOrderGroup_Click"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Expand/Collapse Icon -->
                                <TextBlock Grid.Column="0"
                                          Text="{Binding IsExpanded, Converter={StaticResource BoolToExpandIconConverter}}" 
                                          FontSize="16" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" 
                                              FontWeight="Bold" 
                                              FontSize="16" 
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0"
                                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Items[0].OrderDate}" 
                                              FontSize="14" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="View Details" 
                                           Click="OrderDetails_Click"
                                           Tag="{Binding Items[0].OrderSummaryID}"
                                           Background="{ThemeResource SystemAccentColor}"
                                           Foreground="{ThemeResource AccentButtonForeground}"
                                           Margin="5,0"
                                           Padding="12,6"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                        
                        <!-- Order Items -->
                        <ItemsControl ItemsSource="{Binding Items}" 
                                     Margin="15,0,15,10"
                                     Visibility="{Binding ItemsVisibility}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Icon -->
                                        <Border Grid.Column="0" 
                                               Background="{ThemeResource ControlFillColorTertiaryBrush}"
                                               Width="32" 
                                               Height="32" 
                                               CornerRadius="6"
                                               Margin="0,0,12,0">
                                            <TextBlock Text="ðŸ“¦" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      FontSize="16"/>
                                        </Border>

                                        <!-- Product Details -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProductName}" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="14"
                                                      TextWrapping="Wrap"
                                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{Binding ProductTypeName}" 
                                                      FontSize="12" 
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>

                                        <!-- Category -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="Category" 
                                                      FontSize="11" 
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ProductCategory}" 
                                                      FontSize="13"
                                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- Payment Method -->
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                            <TextBlock Text="Payment" 
                                                      FontSize="11" 
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding PaymentMethod}" 
                                                      FontSize="13"
                                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- Track Order Button -->
                                        <Button Grid.Column="5"
                                               Content="Track Order"
                                               Click="TrackOrder_Click"
                                               Tag="{Binding OrderID}"
                                               Background="{ThemeResource SystemAccentColorDark1}"
                                               Foreground="{ThemeResource AccentButtonForeground}"
                                               VerticalAlignment="Center"
                                               Padding="8,4"
                                               FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- No Results Message -->
        <TextBlock x:Name="NoResultsText" 
                  Grid.Row="1"
                  Text="No orders found matching your criteria"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  FontSize="16"
                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                  Visibility="Collapsed"/>

        <!-- Order Details Dialog -->
        <ContentDialog x:Name="OrderDetailsDialog"
                      Title="Order Details"
                      CloseButtonText="Close"
                      PrimaryButtonText="OK"
                      DefaultButton="Close">
            <ScrollViewer VerticalScrollMode="Auto"
                         VerticalScrollBarVisibility="Auto"
                         MaxHeight="400">
                <StackPanel x:Name="OrderDetailsContent"
                           Spacing="8"
                           Padding="12">
                </StackPanel>
            </ScrollViewer>
        </ContentDialog>
    </Grid>
</Page>