<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketMinds.Views.BuyProductDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:models="using:MarketMinds.Shared.Models"
    xmlns:converters="using:MarketMinds.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        <converters:UrlToImageSourceConverter x:Key="UrlToImageSourceConverter"/>
        <converters:UserTypeVisibilityConverter x:Key="UserTypeVisibilityConverter"/>
        <converters:WishlistGlyphConverter x:Key="WishlistGlyphConverter"/>
        <converters:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
        <converters:InvertedBoolVisibilityConverter x:Key="InvertedBoolVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer ZoomMode="Disabled" HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Breadcrumb -->
                <RowDefinition Height="*"/>    <!-- Main Content -->
                <RowDefinition Height="Auto"/> <!-- Back Button -->
            </Grid.RowDefinitions>

            <!-- Breadcrumb -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16" Spacing="8">
                <Button x:Name="HomeButton" 
                        Content="Home" 
                        Style="{StaticResource TextBlockButtonStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Click="HomeButton_Click"/>
                <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                <TextBlock x:Name="ProductTitleBreadcrumb" 
                           Text="{x:Bind Product.Title, Mode=OneWay}" 
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Main Product Section -->
            <Border Grid.Row="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="0">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" MaxWidth="600"/>
                        <ColumnDefinition Width="1*" MaxWidth="600"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Images Section -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="400"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Main Image Display -->
                        <Border Grid.Row="0" 
                                Background="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}"
                                CornerRadius="8,0,0,0">
                            <Grid>
                                <!-- Main Image -->
                                <Image x:Name="MainImage" 
                                       Source="{x:Bind MainImageSource, Mode=OneWay, Converter={StaticResource UrlToImageSourceConverter}, ConverterParameter='ms-appx:///Assets/Products/default-product.png'}"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                
                                <!-- Image Counter (only show if multiple images) -->
                                <Border Background="{ThemeResource SystemFillColorSolidNeutralBrush}"
                                        CornerRadius="12"
                                        Padding="12,6"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="16"
                                        Visibility="{x:Bind HasMultipleImages, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                                    <TextBlock Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="12"
                                               FontWeight="Medium">
                                        <Run Text="{x:Bind CurrentImageIndex, Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{x:Bind TotalImages, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Thumbnail Images -->
                        <ScrollViewer Grid.Row="1" 
                                      HorizontalScrollMode="Auto" 
                                      VerticalScrollMode="Disabled"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Hidden"
                                      Padding="16"
                                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                      Visibility="{x:Bind HasMultipleImages, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ItemsRepeater x:Name="ThumbnailRepeater" ItemsSource="{x:Bind Product.Images, Mode=OneWay}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="12"/>
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="models:BuyProductImage">
                                            <Border Width="64" Height="64" 
                                                    CornerRadius="8"
                                                    BorderThickness="2"
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                    Background="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}">
                                                <Button Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="0"
                                                        Click="ThumbnailImage_Click"
                                                        Tag="{x:Bind Url}">
                                                    <Image Source="{x:Bind Url, Converter={StaticResource UrlToImageSourceConverter}, ConverterParameter='ms-appx:///Assets/Products/default-product.png'}"
                                                           Stretch="UniformToFill"/>
                                                </Button>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <!-- Product Information Section -->
                    <ScrollViewer Grid.Column="1" 
                                  VerticalScrollMode="Auto" 
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="32">
                        <StackPanel Spacing="24">
                            <!-- Product Header -->
                            <StackPanel Spacing="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                               Text="{x:Bind Product.Title, Mode=OneWay}"
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               TextWrapping="Wrap"/>
                                    
                                    <Border Grid.Column="1"
                                            Background="{ThemeResource SystemAccentColorLight2}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            VerticalAlignment="Top">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE73E;" 
                                                      FontSize="14" 
                                                      Foreground="{ThemeResource SystemAccentColor}"/>
                                            <TextBlock Text="Available" 
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       Foreground="{ThemeResource SystemAccentColor}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                
                                <!-- Product Metadata -->
                                <StackPanel Spacing="8">
                                    <StackPanel Orientation="Horizontal" Spacing="16">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE8EC;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind Product.Category.Name, Mode=OneWay, FallbackValue='Uncategorized'}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE73E;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind Product.Condition.Name, Mode=OneWay, FallbackValue='Unknown'}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="6" Visibility="{x:Bind HasStock, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE7B8;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Foreground="{x:Bind StockTextColor, Mode=OneWay}">
                                            <Run Text="{x:Bind Product.Stock, Mode=OneWay}"/>
                                            <Run Text="{x:Bind StockText, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Price -->
                                <TextBlock Text="{x:Bind Product.Price, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='â‚¬{0:0.00}'}"
                                           Style="{StaticResource HeaderTextBlockStyle}"
                                           Foreground="{ThemeResource SystemAccentColor}"
                                           FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Spacing="12" Visibility="{Binding Converter={StaticResource UserTypeVisibilityConverter}, ConverterParameter=Buyer}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Add to Cart Button -->
                                    <Button Grid.Column="0"
                                            x:Name="AddToCartButton"
                                            HorizontalAlignment="Stretch"
                                            Background="{ThemeResource SystemAccentColor}"
                                            Foreground="{ThemeResource AccentButtonForeground}"
                                            CornerRadius="6"
                                            Padding="16,12"
                                            IsEnabled="{x:Bind HasStock, Mode=OneWay}"
                                            Click="AddToCartButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE7BF;" FontSize="16"/>
                                            <TextBlock Text="Add to Cart" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Wishlist Button -->
                                    <Button Grid.Column="1"
                                            x:Name="WishlistButton"
                                            Background="Transparent"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12"
                                            Margin="12,0,0,0"
                                            Click="WishlistButton_Click">
                                        <FontIcon x:Name="WishlistIcon"
                                                  Glyph="{x:Bind WishlistGlyph, Mode=OneWay}"
                                                  FontSize="16"
                                                  Foreground="{x:Bind WishlistIconColor, Mode=OneWay}"/>
                                    </Button>
                                </Grid>
                                
                                <!-- Stock Warning -->
                                <InfoBar x:Name="StockWarningBar"
                                         IsOpen="{x:Bind IsLowStock, Mode=OneWay}"
                                         Severity="Warning"
                                         Title="Low Stock"
                                         Message="{x:Bind LowStockMessage, Mode=OneWay}"/>
                            </StackPanel>

                            <!-- Login Prompt for Non-Buyers -->
                            <InfoBar Severity="Informational"
                                     IsOpen="{x:Bind ShowLoginPrompt, Mode=OneWay}"
                                     Title="Login Required"
                                     Message="Please log in as a buyer to purchase this product."/>

                            <!-- Product Information Sections -->
                            <StackPanel Spacing="20">
                                <!-- Description -->
                                <StackPanel Spacing="12">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8A5;" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="Description" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <Border Background="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}"
                                            CornerRadius="8"
                                            Padding="16"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <TextBlock Text="{x:Bind ProductDescription, Mode=OneWay}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </Border>
                                </StackPanel>

                                <!-- Seller Information -->
                                <StackPanel Spacing="12">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE77B;" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="Seller Information" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <Border Background="{ThemeResource SystemFillColorSolidNeutralBackgroundBrush}"
                                            CornerRadius="8"
                                            Padding="16"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0"
                                                       Text="{x:Bind SellerName, Mode=OneWay}"
                                                       FontWeight="Medium"
                                                       VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="1"
                                                    x:Name="LeaveReviewButton"
                                                    Background="{ThemeResource SystemAccentColor}"
                                                    Foreground="{ThemeResource AccentButtonForeground}"
                                                    CornerRadius="4"
                                                    Padding="12,8"
                                                    Visibility="{Binding Converter={StaticResource UserTypeVisibilityConverter}, ConverterParameter=Buyer}"
                                                    Click="LeaveReviewButton_Click">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <FontIcon Glyph="&#xE734;" FontSize="14"/>
                                                    <TextBlock Text="Leave Review" FontSize="12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Tags -->
                                <StackPanel Spacing="12" Visibility="{x:Bind HasTags, Mode=OneWay, Converter={StaticResource BoolVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8EC;" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="Tags" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <ItemsRepeater ItemsSource="{x:Bind Product.Tags, Mode=OneWay}">
                                        <ItemsRepeater.Layout>
                                            <UniformGridLayout Orientation="Horizontal" 
                                                               ItemsStretch="None" 
                                                               MinItemWidth="0" 
                                                               MinItemHeight="0"/>
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="models:ProductTag">
                                                <Border Background="{ThemeResource SystemAccentColorLight2}"
                                                        CornerRadius="12"
                                                        Padding="12,6"
                                                        Margin="0,0,8,8">
                                                    <TextBlock Text="{x:Bind Title}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{ThemeResource SystemAccentColor}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Back Button -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,24,0,0">
                <Button x:Name="BackButton"
                        Background="Transparent"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16,12"
                        Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                        <TextBlock Text="Back to Products" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page> 