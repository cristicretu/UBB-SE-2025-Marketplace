<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketMinds.Views.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
		<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                Padding="40" 
                CornerRadius="12" 
                BorderBrush="{ThemeResource SystemAccentColorDark1}" 
                BorderThickness="1" 
                Width="500">
			<StackPanel Spacing="20">
				<!-- Title -->
				<StackPanel Spacing="4" Margin="0,0,0,8">
					<TextBlock Text="Create Your Account" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               TextAlignment="Center" 
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<TextBlock Text="Join our marketplace today." 
                               FontSize="16" 
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
				</StackPanel>
				
				<TextBlock x:Name="ErrorMessage" 
                           Text="" 
                           FontSize="14" 
                           Foreground="{ThemeResource SystemErrorTextColor}" 
                           TextAlignment="Center"/>

				<!-- Username -->
				<StackPanel Spacing="8">
					<TextBlock Text="Username" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<Grid>
						<TextBox Text="{Binding Username, Mode=TwoWay}" 
                                 PlaceholderText="Enter your username"
                                 Height="48" 
                                 Padding="40,12,12,12" 
                                 BorderThickness="1" 
                                 CornerRadius="6"
                                 FontSize="14"
                                 Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
						<FontIcon Glyph="&#xE77B;" 
                                  FontSize="16" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="12,0,0,0"/>
					</Grid>
				</StackPanel>

				<!-- Email -->
				<StackPanel Spacing="8">
					<TextBlock Text="Email Address" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<Grid>
						<TextBox Text="{Binding Email, Mode=TwoWay}" 
                                 PlaceholderText="Enter your email address"
                                 Height="48" 
                                 Padding="40,12,12,12" 
                                 BorderThickness="1" 
                                 CornerRadius="6"
                                 FontSize="14"
                                 Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
						<FontIcon Glyph="&#xE910;" 
                                  FontSize="16" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="12,0,0,0"/>
					</Grid>
				</StackPanel>

				<!-- Phone Number -->
				<StackPanel Spacing="8">
					<TextBlock Text="Phone Number" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<Grid>
						<TextBox x:Name="PhoneNumberTextBox"
                                 Text="{Binding PhoneNumber, Mode=TwoWay}" 
                                 PlaceholderText="+40  123456789"
                                 Height="48" 
                                 Padding="40,12,12,12" 
                                 BorderThickness="1" 
                                 CornerRadius="6"
                                 FontSize="14"
                                 Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                 TextChanging="PhoneNumberTextBox_TextChanging"
                                 GotFocus="PhoneNumberTextBox_GotFocus"/>
						<FontIcon Glyph="&#xE717;" 
                                  FontSize="16" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="12,0,0,0"/>
					</Grid>
					<TextBlock Text="Enter 9 digits (Romanian phone number format)" 
                               FontSize="12" 
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               Margin="0,-4,0,0"/>
				</StackPanel>

				<!-- Account Type -->
				<StackPanel Spacing="8">
					<TextBlock Text="Account Type" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<Grid>
						<ComboBox SelectedValue="{Binding Role, Mode=TwoWay}" 
                                  SelectedValuePath="Tag" 
                                  SelectedIndex="0" 
                                  Width="Auto" 
                                  Height="48" 
                                  Padding="40,12,12,12" 
                                  BorderThickness="1" 
                                  CornerRadius="6"
                                  FontSize="14"
                                  PlaceholderText="Select your role"
                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}">
							<ComboBoxItem Content="Admin" Tag="1"/>
							<ComboBoxItem Content="Buyer" Tag="2"/>
							<ComboBoxItem Content="Seller" Tag="3"/>
						</ComboBox>
						<FontIcon Glyph="&#xF427;" 
                                  FontSize="16" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="12,0,0,0"/>
					</Grid>
				</StackPanel>

				<!-- Password -->
				<StackPanel Spacing="8">
					<TextBlock Text="Password" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<Grid>
						<PasswordBox Password="{Binding Password, Mode=TwoWay}" 
                                     PlaceholderText="Create a strong password"
                                     Height="48" 
                                     Padding="40,12,12,12" 
                                     BorderThickness="1" 
                                     CornerRadius="6"
                                     FontSize="14"
                                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
						<FontIcon Glyph="&#xE72E;" 
                                  FontSize="16" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="12,0,0,0"/>
					</Grid>
					<TextBlock Text="Password must be at least 8 characters with uppercase, lowercase, numbers, and only common special characters (no dashes)." 
                               FontSize="12" 
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,-4,0,0"/>
				</StackPanel>

				<!-- Confirm Password -->
				<StackPanel Spacing="8">
					<TextBlock Text="Confirm Password" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
					<Grid>
						<PasswordBox Password="{Binding ConfirmPassword, Mode=TwoWay}" 
                                     PlaceholderText="Confirm your password"
                                     Height="48" 
                                     Padding="40,12,12,12" 
                                     BorderThickness="1" 
                                     CornerRadius="6"
                                     FontSize="14"
                                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
						<FontIcon Glyph="&#xE930;" 
                                  FontSize="16" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="12,0,0,0"/>
					</Grid>
				</StackPanel>

				<!-- Signup Button -->
				<Button Content="Create Account"
                        Background="{ThemeResource AccentButtonBackground}"
                        Foreground="{ThemeResource AccentButtonForeground}"
                        Width="Auto"
                        Height="48"
                        CornerRadius="6"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Command="{Binding SignupCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0"/>
                
                <!-- Login Link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4" Margin="0,8,0,0">
                    <TextBlock Text="Already have an account?" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="LoginButtonTextBlock" 
                               Text="Sign in" 
                               Foreground="{ThemeResource SystemAccentColor}" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               PointerPressed="LoginButtonTextBlock_PointerPressed" />
                </StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Page>
