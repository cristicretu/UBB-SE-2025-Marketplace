<Window x:Class="MarketMinds.Views.RenewContractView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:MarketMinds.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Renew Contract">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="RootGrid">
        <!-- Main content area -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock 
                Grid.Row="0"
                Text="Renew Contract"
                FontSize="32"
                FontWeight="Bold" 
                Foreground="{ThemeResource SystemAccentColor}"
                HorizontalAlignment="Center"
                Margin="0,20,0,30" />

            <!-- Two-panel layout -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left panel: Contract Selection -->
                <Border 
                    Grid.Column="0"
                    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                    CornerRadius="10"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    Margin="10"
                    Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Section Title -->
                        <TextBlock 
                            Grid.Row="0"
                            Text="CONTRACT SELECTION"
                            FontWeight="Bold"
                            FontSize="18"
                            Foreground="{ThemeResource SystemAccentColor}"
                            Margin="0,0,0,20" />

                        <!-- Contract Selection ComboBox -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,20">
                            <TextBlock 
                                Text="Select a contract:"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Margin="0,0,0,10" />
                            <ComboBox 
                                x:Name="ContractComboBox"
                                Width="400"
                                HorizontalAlignment="Left"
                                DisplayMemberPath="DisplayName"
                                SelectedValuePath="ContractID"
                                PlaceholderText="-- Select a contract --"
                                BorderBrush="{ThemeResource SystemAccentColor}"
                                BorderThickness="2"
                                CornerRadius="8"
                                SelectionChanged="ContractComboBox_SelectionChanged" />
                        </StackPanel>

                        <!-- Contract Details Panel -->
                        <StackPanel 
                            x:Name="ContractDetailsPanel"
                            Grid.Row="2"
                            Visibility="Collapsed">
                            <TextBlock 
                                Text="Contract Details"
                                FontWeight="SemiBold"
                                FontSize="16"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Margin="0,10,0,15" />

                            <TextBlock x:Name="StartDateTextBlock" 
                                       Margin="0,0,0,10"
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

                            <TextBlock x:Name="EndDateTextBlock" 
                                       Margin="0,0,0,15"
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

                            <TextBlock x:Name="StatusTextBlock"
                                       FontWeight="Medium"
                                       FontSize="14"
                                       Margin="0,5,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right panel: Renewal Form -->
                <Border 
                    Grid.Column="1"
                    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                    CornerRadius="10"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    Margin="10"
                    Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Section Title -->
                        <TextBlock 
                            Grid.Row="0"
                            Text="RENEWAL REQUEST FORM"
                            FontWeight="Bold"
                            FontSize="18"
                            Foreground="{ThemeResource SystemAccentColor}"
                            Margin="0,0,0,20" />

                        <!-- Form Content -->
                        <Grid Grid.Row="1">
                            <!-- Renewal Form -->
                            <StackPanel x:Name="RenewalForm" Visibility="Collapsed">
                                <TextBlock 
                                    Text="New Start Date:"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Margin="0,0,0,5" />
                                <TextBlock 
                                    x:Name="StartDateValueTextBlock"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    FontSize="14"
                                    Margin="0,0,0,20" />

                                <TextBlock 
                                    Text="Choose the new End Date:"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Margin="0,0,0,10" />
                                <DatePicker 
                                    x:Name="EndDatePicker"
                                    HorizontalAlignment="Left"
                                    Width="400"
                                    BorderBrush="{ThemeResource SystemAccentColor}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Margin="0,0,0,30" />

                                <Button 
                                    x:Name="SubmitButton"
                                    Content="Submit Renewal Request"
                                    Background="{ThemeResource SystemAccentColor}"
                                    Foreground="White"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Padding="15,8"
                                    Click="SubmitButton_Click" />
                            </StackPanel>

                            <!-- Placeholder Text -->
                            <TextBlock
                                x:Name="FormPlaceholder"
                                Text="Please select a contract to continue"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid 
            x:Name="LoadingOverlay"
            Background="#80000000"
            Visibility="Collapsed">
            <StackPanel 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ProgressRing 
                    IsActive="True"
                    Width="50"
                    Height="50"
                    Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock 
                    Text="Processing..."
                    Foreground="White"
                    Margin="0,10,0,0"
                    FontSize="16" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
