<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MarketMinds.Views.CreateBorrowProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create Product to Lend"
    >
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Create a Product to Lend"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Fill in the details below to list your product for lending"
                       FontSize="14"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      HorizontalScrollMode="Disabled">
            <StackPanel Spacing="16">

                <StackPanel>
                    <TextBox x:Name="TitleTextBox"
                             Header="Product Title *"
                             PlaceholderText="Enter a descriptive title for your product"
                             Background="{ThemeResource TextControlBackground}"
                             Foreground="{ThemeResource TextControlForeground}"
                             MaxLength="100"/>
                    <TextBlock x:Name="TitleErrorText"
                               Text=""
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel>
                    <TextBox x:Name="DescriptionTextBox"
                             Header="Description"
                             PlaceholderText="Describe your product, its features, and any special instructions"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             Background="{ThemeResource TextControlBackground}"
                             Foreground="{ThemeResource TextControlForeground}"
                             MaxLength="500"/>
                    <TextBlock Text="{x:Bind GetCharacterCount(DescriptionTextBox.Text), Mode=OneWay}"
                               FontSize="10"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Right"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <ComboBox x:Name="CategoryComboBox"
                                  Header="Category *"
                                  PlaceholderText="Select a category"
                                  Background="{ThemeResource TextControlBackground}"
                                  Foreground="{ThemeResource TextControlForeground}"
                                  HorizontalAlignment="Stretch"
                                  DisplayMemberPath="DisplayTitle"
                                  SelectedValuePath="Id"/>
                        <TextBlock x:Name="CategoryErrorText"
                                   Text=""
                                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <ComboBox x:Name="ConditionComboBox"
                                  Header="Condition *"
                                  PlaceholderText="Select condition"
                                  Background="{ThemeResource TextControlBackground}"
                                  Foreground="{ThemeResource TextControlForeground}"
                                  HorizontalAlignment="Stretch"
                                  DisplayMemberPath="DisplayTitle"
                                  SelectedValuePath="Id"/>
                        <TextBlock x:Name="ConditionErrorText"
                                   Text=""
                                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>

                <StackPanel>
                    <TextBox x:Name="DailyRateTextBox"
                             Header="Daily Rate (â‚¹) *"
                             PlaceholderText="Enter daily rental rate"
                             Background="{ThemeResource TextControlBackground}"
                             Foreground="{ThemeResource TextControlForeground}"
                             InputScope="Number"/>
                    <TextBlock x:Name="DailyRateErrorText"
                               Text=""
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Availability Period"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker x:Name="StartDatePicker"
                                    Grid.Column="0"
                                    Header="Start Date"
                                    Background="{ThemeResource TextControlBackground}"
                                    Foreground="{ThemeResource TextControlForeground}"
                                    HorizontalAlignment="Stretch"/>

                        <DatePicker x:Name="EndDatePicker"
                                    Grid.Column="2"
                                    Header="End Date"
                                    Background="{ThemeResource TextControlBackground}"
                                    Foreground="{ThemeResource TextControlForeground}"
                                    HorizontalAlignment="Stretch"/>
                    </Grid>
                    <TextBlock x:Name="DateErrorText"
                               Text=""
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Product Images"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <Button x:Name="UploadImagesButton"
                            Content="ðŸ“· Upload Images"
                            Click="UploadImagesButton_Click"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Padding="16,8"
                            HorizontalAlignment="Left"/>

                    <GridView x:Name="ImagePreviewGrid"
                              Margin="0,8,0,0"
                              MaxHeight="200"
                              ScrollViewer.HorizontalScrollMode="Disabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollMode="Auto"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        Width="100"
                                        Height="100"
                                        CornerRadius="4"
                                        Margin="4">
                                    <Grid>
                                        <Image Source="{Binding Url}"
                                               Stretch="UniformToFill"/>
                                        <Button Content="âœ•"
                                                Background="{ThemeResource SystemFillColorCriticalBrush}"
                                                Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                Width="24"
                                                Height="24"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="4"
                                                Click="RemoveImage_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="12"
                    Margin="0,24,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Background="{ThemeResource SystemFillColorCriticalBrush}"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Padding="24,8"
                    MinWidth="100"/>
            <Button x:Name="SubmitButton"
                    Content="Create Listing"
                    Click="SubmitButton_Click"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                    Padding="24,8"
                    MinWidth="120"/>
        </StackPanel>

        <Border x:Name="LoadingOverlay"
                Grid.RowSpan="3"
                Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressRing IsActive="True"
                              Width="50"
                              Height="50"/>
                <TextBlock Text="Creating your listing..."
                           Foreground="{ThemeResource TextFillColorInverseBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>